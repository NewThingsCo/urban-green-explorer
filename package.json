{
  "author": "New Things Co <info@newthings.co> (https://www.newthings.co/)",
  "babel": {
    "plugins": [
      "@vue/babel-plugin-jsx"
    ],
    "presets": [
      [
        "babel-preset-vite",
        {
          "env": false
        }
      ]
    ]
  },
  "browserslist": [
    "defaults",
    "not IE 11"
  ],
  "bugs": {
    "url": "https://github.com/NewThingsCo/contentful-vue/issues"
  },
  "contributors": [
    "Niko Pettersen <niko.pettersen@newthings.co> (https://www.newthings.co)",
    "Perttu Ristimella <perttu.ristimella@newthings.co> (https://www.newthings.co)"
  ],
  "dependencies": {
    "pinia": "^2.0.13",
    "vite": "^2.9.5",
    "vue": "^3.2.33",
    "vue-router": "^4.0.14"
  },
  "description": "Exploring Contentful integration with Vue",
  "devDependencies": {
    "@intlify/vite-plugin-vue-i18n": "^3.4.0",
    "@pinia/testing": "^0.0.11",
    "@playwright/test": "^1.21.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "@vue/babel-plugin-jsx": "^1.1.1",
    "@vue/test-utils": "^2.0.0-rc.20",
    "babel-preset-vite": "^1.0.4",
    "eslint": "8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-markdown": "^2.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.6.0",
    "jest": "^27.5.1",
    "jest-environment-jsdom": "^27.5.1",
    "jest-transform-stub": "^2.0.0",
    "postcss": "^8.4.12",
    "postcss-preset-env": "^7.4.3",
    "postcss-windicss": "^1.0.0",
    "prettier": "^2.6.2",
    "stylelint": "^14.7.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^25.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "^4.6.3",
    "vite-jest": "^0.1.4",
    "vite-plugin-eslint": "^1.4.0",
    "vite-plugin-stylelint": "^2.1.0",
    "vite-plugin-windicss": "^1.8.4",
    "vue-i18n": "^9.1.9",
    "vue-tsc": "^0.34.7",
    "windicss": "^3.5.1"
  },
  "engines": {
    "node": "16.x"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:import/recommended",
      "plugin:import/typescript",
      "plugin:json/recommended",
      "plugin:markdown/recommended",
      "plugin:vue/vue3-recommended"
    ],
    "globals": {
      "window": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "json",
      "markdown",
      "prettier"
    ],
    "root": true,
    "rules": {
      "import/extensions": "off",
      "import/newline-after-import": [
        "error",
        {
          "count": 1
        }
      ],
      "import/no-named-as-default": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "type",
            "external",
            "builtin",
            "parent",
            "object",
            "sibling"
          ],
          "pathGroups": [
            {
              "group": "type",
              "pattern": "~/types/**"
            },
            {
              "group": "type",
              "pattern": "**/types"
            },
            {
              "group": "builtin",
              "pattern": "~/**"
            }
          ]
        }
      ],
      "no-console": "off",
      "semi": "off",
      "vue/multi-word-component-names": "off",
      "vue/order-in-components": "error",
      "yoda": [
        "error",
        "always"
      ]
    },
    "settings": {
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/resolver": {
        "alias": {
          "map": [
            [
              "@",
              "./src"
            ],
            [
              "~",
              "./"
            ]
          ]
        },
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        },
        "typescript": {}
      }
    }
  },
  "homepage": "https://github.com/NewThingsCo/contentful-vue/#readme",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.tsx"
    ],
    "globals": {
      "ts-jest": {
        "babelConfig": true,
        "tsconfig": "tsconfig.json",
        "useESM": true
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "moduleNameMapper": {
      "\\.(gif|jpg|jpeg|png|webp|svg)": "<rootDir>/tests/unit/mocks/fileMock.js",
      "^@/(.*)$": "<rootDir>/src/$1",
      "^~/(.*)$": "<rootDir>/$1"
    },
    "preset": "vite-jest",
    "testEnvironment": "jest-environment-jsdom",
    "testMatch": [
      "<rootDir>/src/**/*.test.ts?(x)"
    ],
    "transform": {
      ".+\\.(css|jpg|png|svg|ttf|webp|woff|woff2)(\\?inline)?$": "jest-transform-stub",
      ".+\\.(ts|tsx)?$": "ts-jest"
    },
    "verbose": true
  },
  "keywords": [
    "contentful",
    "integration",
    "typescript",
    "vite",
    "vue"
  ],
  "license": "MIT",
  "name": "contentful-vue",
  "overrides": {
    "eslint": "8.13.0"
  },
  "postcss": {
    "plugins": {
      "postcss-preset-env": {
        "features": {
          "nesting-rules": true
        },
        "stage": 2
      },
      "postcss-windicss": {}
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NewThingsCo/contentful-vue"
  },
  "scripts": {
    "build": "vue-tsc --noEmit && vite build",
    "build:docker": "docker build . -t contentful-vue",
    "dev": "vite",
    "lint": "npm run lint:client && npm run lint:styles",
    "lint:client": "eslint --ignore-path .gitignore .",
    "lint:fix:client": "eslint --fix --ignore-path .gitignore .",
    "lint:fix:styles": "stylelint --fix **/*.css",
    "lint:styles": "stylelint **/*.css",
    "postinstall": "scripts/postinstall.sh",
    "prettier": "prettier --ignore-path .gitignore --write .",
    "start": "vite preview --port 8080",
    "test": "npm run test:unit && npm run test:e2e",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:e2e:record": "playwright test --config=tests/e2e/playwright.record.config.ts",
    "test:unit": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --detectOpenHandles"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-prettier",
      "stylelint-config-standard"
    ],
    "rules": {
      "declaration-colon-newline-after": null,
      "function-name-case": null,
      "function-parentheses-space-inside": null,
      "max-nesting-depth": 3,
      "no-invalid-position-at-import-rule": null,
      "selector-max-compound-selectors": null,
      "selector-max-id": null,
      "selector-no-qualifying-type": null,
      "string-quotes": "single"
    }
  },
  "version": "0.0.0"
}
