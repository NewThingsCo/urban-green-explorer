{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "configurations": [
    {
      "name": "Launch Chrome",
      "reAttach": true,
      "reloadOnAttach": true,
      "reloadOnChange": {
        "watch": "${workspaceFolder}/**/*"
      },
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Firefox",
      "reAttach": true,
      "reloadOnAttach": true,
      "reloadOnChange": {
        "watch": "${workspaceFolder}/**/*"
      },
      "request": "launch",
      "type": "firefox",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "version": "0.2.0"
}
