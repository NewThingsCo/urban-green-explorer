{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@intlify/vite-plugin-vue-i18n/client",
      "jest",
      "leaflet",
      "node",
      "vite/client",
      "vite-plugin-pwa/client",
      "./src/types"
    ],
    "useDefineForClassFields": true
  },
  "exclude": ["coverage", "dev-dist", "dist", "tests/unit"]
}
