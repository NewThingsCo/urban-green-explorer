{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "@/*": ["./*"],
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@intlify/vite-plugin-vue-i18n/client",
      "@types/jest",
      "node",
      "vite/client",
      "vite-plugin-pages/client",
      "vite-ssg"
    ],
    "useDefineForClassFields": true
  },
  "include": ["**/*.ts", "**/*.d.ts", "src/**/*.tsx"]
}
