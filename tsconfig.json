{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./src/*"],
      "#vueuse/schema-org/provider": [
        "./node_modules/@vueuse/schema-org/dist/providers/full"
      ],
      "#vueuse/schema-org/runtime": [
        "./node_modules/@vueuse/schema-org/dist/runtime/index"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@intlify/vite-plugin-vue-i18n/client",
      "@vueuse/schema-org",
      "@vueuse/schema-org-vite",
      "jest",
      "leaflet",
      "node",
      "vite-plugin-pwa/client",
      "vite/client"
    ],
    "useDefineForClassFields": true
  },
  "exclude": ["coverage", "dev-dist", "dist", "tests/unit"]
}
